{% extends 'base.html.twig' %}


{% block title %}All categories{% endblock %}


{% block body %}

<h1>Liste de toute les séries</h1>

{% for category in categories %}

        <div>

            <h2>{{ loop.index }} / Catégorie : {{ category.name }}</h2>

            <a href="{{ path("category_show", { categoryName: category.name }) }}">
            Voir les series de la catégorie {{ category.name }} </a>

        </div>

    {% else %}

        Aucune catégorie trouvée.

    {% endfor %}
    
    <a href="{{ path('app_index') }}">

        Retour à l'accueil

    </a>

{% endblock %}